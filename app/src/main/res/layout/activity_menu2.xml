                android:fontFamily="@font/playfairdisplaybold"
                android:text="Nasi Tim Tuna Kemangi"
                android:textColor="@color/tertiaryColor"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/menu2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_1"
                android:src="@drawable/rectangleeee"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/menu22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_1"
                android:src="@drawable/menu22"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="75dp" />

            <TextView
                android:layout_width="86dp"
                android:layout_height="96dp"
                android:layout_below="@id/menu2_1"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@id/menu23"
                android:fontFamily="@font/playfairdisplaybold"
                android:text="Pasta Creamy Simple"
                android:textColor="@color/tertiaryColor"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/menu2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_2"
                android:src="@drawable/rectangleeee"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/menu23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_2"
                android:src="@drawable/menu23"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="75dp" />

            <TextView
                android:layout_width="119dp"
                android:layout_height="57dp"
                android:layout_below="@id/menu2_2"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="73dp"
                android:layout_toEndOf="@id/menu23"
                android:fontFamily="@font/playfairdisplaybold"
                android:text="Kroket Kentang"
                android:textColor="@color/tertiaryColor"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/menu2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_3"
                android:src="@drawable/rectangleeee"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/menu24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu2_3"
                android:src="@drawable/menu24"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="75dp" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="86dp"
                android:layout_below="@id/menu2_3"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@id/menu24"
                android:fontFamily="@font/playfairdisplaybold"
                android:text="Yummy Bites Noodle"
                android:textColor="@color/tertiaryColor"
                android:textSize="18dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
