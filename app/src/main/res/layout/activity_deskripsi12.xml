        android:id="@+id/backd1"/>

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/playfairdisplaybold"
        android:text="Bubur Nasi Ikan Nila dan Kacang Panjang"
        android:textColor="@color/tertiaryColor"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="230dp"
        android:layout_below="@id/D1_img_2"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/menu12"
        android:id="@+id/dmenu12"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dmenu12"
