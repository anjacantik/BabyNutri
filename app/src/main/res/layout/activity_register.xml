<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_back"
            android:id="@+id/btnbackregister"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo2"
            android:layout_marginTop="130dp"
            android:id="@+id/R_img_2"/>

        <TextView
            android:id="@+id/R_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_img_2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="58dp"
            android:fontFamily="@font/interregular"
            android:text="Email"
            android:textColor="@color/tertiaryColor"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/R_email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_email"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:fontFamily="@font/interregular"
            android:hint="Masukkan email"
            android:paddingLeft="15dp"
            android:background="@drawable/colominput"
            android:height="48dp"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/R_uname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_email2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="58dp"
            android:fontFamily="@font/interregular"
            android:text="Username"
            android:textColor="@color/tertiaryColor"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/R_uname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_uname1"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:fontFamily="@font/interregular"
            android:hint="Masukkan username"
            android:paddingLeft="15dp"
            android:background="@drawable/colominput"
            android:height="48dp"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/R_passwordEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_uname2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="58dp"
            android:fontFamily="@font/interregular"
            android:text="Password"
            android:textColor="@color/tertiaryColor"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/R_passwordEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_passwordEditText1"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:fontFamily="@font/interregular"
            android:hint="Masukkan password"
            android:paddingLeft="15dp"
            android:background="@drawable/colominput"
            android:height="48dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/R_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_passwordEditText2"
            android:background="@drawable/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Sign Up"
            android:fontFamily="@font/intersemibold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/R_button2"
            android:gravity="center"
            android:layout_marginTop="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="12sp"
                    android:textColor="@color/tertiaryColor"
                    android:fontFamily="@font/interregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here."
                    android:textSize="12sp"
                    android:fontFamily="@font/interregular"
                    android:id="@+id/txt_login"
                    android:textColor="@color/secondaryColor"/>

        </LinearLayout>

</RelativeLayout>
